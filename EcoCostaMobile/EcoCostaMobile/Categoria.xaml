<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoCostaMobile.Categoria">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="ecocosta"/>
            <Label Text="Cadastro de Categoria" FontSize="20" TextColor="Black" HorizontalTextAlignment="Center"/>
            <Entry x:Name="ID" Placeholder="ID" 
                   HorizontalTextAlignment="Start" TextColor="Black" FontSize="20" Margin="0,0,360,0" IsEnabled="False"/>

            <Entry x:Name="categoria" Placeholder="Categoria" TextColor="Black" FontSize="20" 
                   Margin="0,0,0,0" HorizontalOptions="FillAndExpand" />

            <StackLayout Orientation="Horizontal">
            <Button Text="Cadastrar"  HorizontalOptions="FillAndExpand" Margin="10,0,0,0" x:Name="buttoncadastrarcategoria"
                        BackgroundColor="#20576c"
                        BorderRadius="8"
                        TextColor="White" Clicked="Buttoncadastrarcategoria_Clicked"/>
            <Button Text="Atualizar"  HorizontalOptions="FillAndExpand" Margin="0,0,10,0" x:Name="buttonatualizarcategoria"
                        BackgroundColor="#20576c"
                        BorderRadius="8"
                        TextColor="White" Clicked="Buttonatualizarcategoria_Clicked"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Listar"  HorizontalOptions="FillAndExpand" Margin="10,0,10,0" x:Name="buttonListar"
                        BackgroundColor="#20576c"
                        BorderRadius="8"
                        TextColor="White" Clicked="ButtonListar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>